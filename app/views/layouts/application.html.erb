<!DOCTYPE html>
<html>
  <head>
    <title>FoodlogApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css">
  </head>

  <body>
    <%= render 'shared/header'%>
    <% if notice.present?%>
      <div class="notification is-link is-light"><%= notice %></div>
    <% end %>
    <% if alert.present?%>
      <div class="notification is-danger is-light"><%= alert %></div>
    <% end %>
    <div class="container">
      <%= yield %>  
    </div>
  </body>
</html>
